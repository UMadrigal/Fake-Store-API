<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    tools:context=".ui.main.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryColor">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingHorizontal="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:elevation="4dp">

                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="@dimen/common_size_header_button"
                    android:layout_height="@dimen/common_size_header_button"
                    android:background="@android:color/transparent"
                    android:foreground="?selectableItemBackground"
                    android:src="@drawable/ic_btn_side_menu"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageButton
                    android:visibility="invisible"
                    android:id="@+id/btnBack"
                    android:layout_width="@dimen/common_size_header_button"
                    android:layout_height="@dimen/common_size_header_button"
                    android:background="@android:color/transparent"
                    android:foreground="?selectableItemBackground"
                    android:src="@drawable/ic_btn_back"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/common_size_header_button"
                    android:layout_marginHorizontal="16dp"
                    app:cardBackgroundColor="@color/primaryColorFaded"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnBack"
                    app:layout_constraintEnd_toStartOf="@id/btnNotifications">

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_size_header_button"
                        android:layout_marginHorizontal="8dp"
                        android:hint="Search..."
                        android:textColor="@color/gray"
                        android:drawableStart="@drawable/ic_search"
                        android:drawablePadding="8dp"
                        android:background="@android:color/transparent"
                        style="@style/EditTextStyle"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/common_size_header_button"
                    android:layout_marginHorizontal="16dp"
                    android:gravity="center"
                    tools:text="CategorÃ­a"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnBack"
                    app:layout_constraintEnd_toStartOf="@id/btnNotifications"
                    style="@style/SubTitleText"/>

                <ImageButton
                    android:id="@+id/btnNotifications"
                    android:layout_width="@dimen/common_size_header_button"
                    android:layout_height="@dimen/common_size_header_button"
                    android:background="@android:color/transparent"
                    android:foreground="?selectableItemBackground"
                    android:src="@drawable/ic_btn_back"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/mainFragmentContainerView"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:layout_above="@id/bottomNavView"
            app:defaultNavHost="true"
            app:navGraph="@navigation/main_nav_graph" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavView"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@color/primaryColorFaded"
            app:itemActiveIndicatorStyle="@null"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@color/selector_bottom_menu_item_icon_tint"
            app:itemTextColor="@color/selector_bottom_menu_item_icon_tint"
            app:itemPaddingTop="16dp"
            app:itemPaddingBottom="14dp"
            app:menu="@menu/bottom_nav_menu" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/primaryColorFaded"/>

</androidx.drawerlayout.widget.DrawerLayout>