<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FakeStore" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@color/primaryColor</item>
    </style>

    <style name="Theme.FakeStore" parent="Base.Theme.FakeStore">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextCommonStyle" parent="Theme.FakeStore">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleText" parent="TextCommonStyle">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="SubTitleText" parent="TextCommonStyle">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditTextStyle" parent="TextCommonStyle">
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="TextErrorStyle" parent="TextCommonStyle">
        <item name="android:textColor">@color/errorColor</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:drawableStart">@drawable/ic_exclamation</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SubTitleTextClickable" parent="SubTitleText">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="ClickableView" parent="Theme.FakeStore">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

</resources>